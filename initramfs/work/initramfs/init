#!/bin/busybox sh
. "/irf_utils.sh"
basic_setup

one_time_swap "1aa7420e-2897-4cc5-b43a-15ec79976b7c"

mount_this "/dev/sr0" "/sqfs" "-t squashfs"
mount_this "none" "/tmpfs" "-t tmpfs"
union /tmpfs /sqfs /mnt

rm /mnt/etc/local.d/*
cp /profiles/tbb/tbb.start /mnt/etc/local.d/
chmod +x /mnt/etc/local.d/tbb.start

switch /mnt #/bin/sh

echo "failed"
exec sh

#Defaults
init="/sbin/init"
#root="/dev/vg/root"
#enc_root=/dev/sda1

sleep 2
mdev -s
sleep 2

root=$(blkid | sed -n "/uuid/s/\(\/dev\/sd[a-z][0-9]\).*/\1/p")

cryptsetup luksOpen "${root}" root
#lvmdiskscan

#lvm vgchange -a y

mount /dev/mapper/root /newroot

